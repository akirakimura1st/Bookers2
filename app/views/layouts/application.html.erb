<!DOCTYPE html>
<html>
<head>
  <title>Bookers2</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <div class="navbar navbar-header navbar-left">
        <span>Bookers</span>
      </div>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <li class=""><%= link_to " Home", user_path(current_user), class: "glyphicon glyphicon-home"  %></li>
            <li><%= link_to " Users", users_path, class: "glyphicon glyphicon-user" %></li>
            <li><%= link_to " Books", books_path, class: "glyphicon glyphicon-book" %></li>
            <li><%= link_to " logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %></li>
            <% else %>
            <li><%= link_to "Home", root_path  %></li>
            <!-- about 途中 -->
            <li><%= link_to "About", users_about_path %></li>
            <li><%= link_to "sign up", new_user_registration_path %></li>
            <li><%= link_to "login", new_user_session_path %></li>
            <% end %>
          </ul>
        </nav>
    </div>
  </header>
  <%= yield %>
</body>
</html>
